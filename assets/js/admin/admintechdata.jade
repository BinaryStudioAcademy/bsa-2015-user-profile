					input.form-control(ng-model="achCategory.name")
				.btn-group
					.btn.btn-primary(ng-click="techdata.updateAchCategoryInCollection(achCategory)")
						span.glyphicon.glyphicon-floppy-disk
					.btn.btn-danger(ng-click="techdata.removeAchCategoryFromCollection(achCategory)")
						span.glyphicon.glyphicon-remove
		hr.voffset4
		h4.col-md-12.voffset4 Technologies
		.col-md-6
			input.form-control(type="text" placeholder="Search technology" ng-model="searchTechnology") 
		.col-md-6
			button.btn.btn-primary(type='button', ng-click='techdata.isTechnologyCollapsed = false') Add new technology
		.col-md-12
			.alert.alert-success.voffset3(role="alert", ng-show="techdata.technologyAlert") Technology has been created successfully!
		div(collapse="techdata.isTechnologyCollapsed")
			.col-md-4
				input.form-control(ng-model="techdata.technology.name" placeholder="New technology name")
			.btn-group.col-md-4(dropdown='', keyboard-nav='')
					button.btn.btn-default.col-md-10(type='button') {{techdata.technology.category.name}}
					button#simple-btn-keyboard-nav.btn.btn-default.col-md-2(type='button', dropdown-toggle='')
						span.caret
					ul.dropdown-menu.scrollable-menu(role='menu', aria-labelledby='simple-btn-keyboard-nav')
						li(role='menuitem' ng-repeat="category in techdata.techCategories | orderBy : 'name'")
							a(ng-click="techdata.selectCategory(techdata.technology, category)") {{category.name}}
			.btn-group
				.btn.btn-success(ng-click="techdata.createTechnologyInCollection()")
					span.glyphicon.glyphicon-ok
				.btn.btn-warning(ng-click="techdata.technologyCancel()")
					span.glyphicon.glyphicon-share-alt
		div.voffset4
			div(ng-repeat="technology in techdata.technologies | filter:searchTechnology track by $index")
				.col-md-4
					input.form-control(ng-model="technology.name")
				.btn-group.col-md-4(dropdown='', keyboard-nav='')
					button.btn.btn-default.col-md-10(type='button') {{technology.category.name}}
					button#simple-btn-keyboard-nav.btn.btn-default.col-md-2(type='button', dropdown-toggle='')
						span.caret
					ul.dropdown-menu.scrollable-menu(role='menu', aria-labelledby='simple-btn-keyboard-nav')
						li(role='menuitem' ng-repeat="category in techdata.techCategories | orderBy : 'name'")
							a(ng-click="techdata.selectCategory(technology, category)") {{category.name}}
				.btn-group
					.btn.btn-primary(ng-click="techdata.updateTechnologyInCollection(technology)")
						span.glyphicon.glyphicon-floppy-disk
					.btn.btn-danger(ng-click="techdata.removeTechnologyFromCollection(technology)")
						span.glyphicon.glyphicon-remove