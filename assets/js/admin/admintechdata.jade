div(ng-controller="TechDataController as techdata")
	script(type='text/ng-template', id='modalConfirmDelete.html').
		<div class="modal-header">
			<h3 class="modal-title">Confirm</h3>
		</div>
		<div class="modal-body row">
			<span class="col-md-offset-1">Are you sure want to delete it?</span>
		</div>
		<div class="modal-footer">
		<button class="btn btn-primary" type="button" ng-click="modalconf.ok()">OK</button>
		<button class="btn btn-warning" type="button" ng-click="modalconf.cancel()">Cancel</button>
		</div>
	.row
		h4.col-md-12 Positions
		.col-md-6
			input.form-control(type="text" placeholder="Search position" ng-model="searchPosition") 
		.col-md-6
			button.btn.btn-primary(type='button', ng-click='techdata.isPositionCollapsed = false') Add new position
		.col-md-12
			.alert.alert-success.voffset3(role="alert", ng-show="techdata.positionAlert") Position has been created successfully!
		div(collapse="techdata.isPositionCollapsed")
			.col-md-8
				input.form-control(ng-model="techdata.position.name" placeholder="New position name")
			.btn-group
				.btn.btn-success(ng-click="techdata.createPositionInCollection()")
					span.glyphicon.glyphicon-ok
				.btn.btn-warning(ng-click="techdata.positionCancel()")
					span.glyphicon.glyphicon-share-alt
		div.voffset4
			div(ng-repeat="position in techdata.positions | filter:searchPosition track by $index")
				.col-md-8
					input.form-control(ng-model="position.name")
				.btn-group
					.btn.btn-primary(ng-click="techdata.updatePositionInCollection(position)")
						span.glyphicon.glyphicon-floppy-disk
					.btn.btn-danger(ng-click="techdata.removePositionFromCollection(position)")
						span.glyphicon.glyphicon-remove
		hr.voffset4
		h4.col-md-12.voffset4 Directions
		.col-md-6
			input.form-control(type="text" placeholder="Search direction" ng-model="searchDirection") 
		.col-md-6
			button.btn.btn-primary(type='button', ng-click='techdata.isDirectionCollapsed = false') Add new direction
		.col-md-12
			.alert.alert-success.voffset3(role="alert", ng-show="techdata.directionAlert") Direction has been created successfully!
		div(collapse="techdata.isDirectionCollapsed")
			.col-md-8
				input.form-control(ng-model="techdata.direction.name" placeholder="New direction name")
			.btn-group
				.btn.btn-success(ng-click="techdata.createDirectionInCollection()")
					span.glyphicon.glyphicon-ok
				.btn.btn-warning(ng-click="techdata.directionCancel()")
					span.glyphicon.glyphicon-share-alt
		div.voffset4
			div(ng-repeat="direction in techdata.directions | filter:searchDirection track by $index")
				.col-md-8
					input.form-control(ng-model="direction.name")
				.btn-group
					.btn.btn-primary(ng-click="techdata.updateDirectionInCollection(direction)")
						span.glyphicon.glyphicon-floppy-disk
					.btn.btn-danger(ng-click="techdata.removeDirectionFromCollection(direction)")
						span.glyphicon.glyphicon-remove
		hr.voffset4
		h4.col-md-12.voffset4 Technology categories
		.col-md-6
			input.form-control(type="text" placeholder="Search category" ng-model="searchTechCategory") 
